<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_700"
    tools:context=".c500">

    <ScrollView
        android:layout_width="409dp"
        android:layout_height="729dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:translationY="15dp">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:fontFamily="serif-monospace"
                android:text="CRUCIAL P2"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="23sp"
                android:translationY="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="650dp"
                android:orientation="vertical"
                android:translationY="30dp">

                <ImageView
                    android:id="@+id/imageView26"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:translationX="100dp"
                    app:srcCompat="@drawable/m2c500" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:fontFamily="serif-monospace"
                    android:text="PRECIO: 60 $"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:translationY="10sp" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:fontFamily="serif-monospace"
                    android:text="CAPACIDAD: 500 GB"
                    android:textAlignment="viewStart"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:translationX="50sp"
                    android:translationY="10sp" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:fontFamily="serif-monospace"
                    android:text="INTERFAZ: NVMe"
                    android:textAlignment="viewStart"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:translationX="50sp"
                    android:translationY="10sp" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:fontFamily="serif-monospace"
                    android:text="ESCRITURA: 150 TB"
                    android:textAlignment="viewStart"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:translationX="50sp"
                    android:translationY="10sp" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:fontFamily="serif-monospace"
                    android:text="PESO: 17 Gr"
                    android:textAlignment="viewStart"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:translationX="50sp"
                    android:translationY="10sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:translationY="20sp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btninfoc500"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@color/transparente"
                            android:fontFamily="sans-serif"
                            android:text="MÁS INFORMACIÓN"
                            android:textAlignment="textEnd"
                            android:textColor="#4CAF50"
                            android:textSize="15sp"
                            android:translationX="10sp" />

                        <Button
                            android:id="@+id/btncc500"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@color/transparente"
                            android:fontFamily="sans-serif"
                            android:text="AGREGAR AL CARRITO"
                            android:textAlignment="viewStart"
                            android:textColor="#E91E63"
                            android:textSize="15sp"
                            android:translationX="-10sp" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>