<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_700"
    tools:context=".monitor">

    <ScrollView
        android:layout_width="409dp"
        android:layout_height="729dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:translationY="15dp">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:fontFamily="serif-monospace"
                android:text="MONITORES"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="35sp"
                android:translationY="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:orientation="vertical"
                android:translationY="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageView3"
                            android:layout_width="150dp"
                            android:layout_height="200dp"
                            android:translationX="35dp"
                            app:srcCompat="@drawable/ms24" />

                        <Button
                            android:id="@+id/btns24"
                            android:layout_width="match_parent"
                            android:layout_height="50sp"
                            android:background="@color/transparente"
                            android:fontFamily="serif-monospace"
                            android:text="SAMSUNG 24'75HZ"
                            android:textColor="@color/white"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="150dp"
                            android:layout_height="200dp"
                            app:srcCompat="@drawable/ms27" />

                        <Button
                            android:id="@+id/btns27"
                            android:layout_width="match_parent"
                            android:layout_height="50sp"
                            android:background="@color/transparente"
                            android:fontFamily="serif-monospace"
                            android:text="SAMSUNG 27'75HZ"
                            android:textAlignment="viewStart"
                            android:textColor="@color/white"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:translationY="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageView5"
                            android:layout_width="150dp"
                            android:layout_height="200dp"
                            android:translationX="35dp"
                            app:srcCompat="@drawable/tuf24144" />

                        <Button
                            android:id="@+id/btna24"
                            android:layout_width="match_parent"
                            android:layout_height="50sp"
                            android:background="@color/transparente"
                            android:fontFamily="serif-monospace"
                            android:text="ASUS TUF 24'144HZ"
                            android:textColor="@color/white"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageView6"
                            android:layout_width="150dp"
                            android:layout_height="200dp"
                            app:srcCompat="@drawable/tuf27144" />

                        <Button
                            android:id="@+id/btna27"
                            android:layout_width="match_parent"
                            android:layout_height="50sp"
                            android:background="@color/transparente"
                            android:fontFamily="serif-monospace"
                            android:text="ASUS TUF 27'144HZ"
                            android:textAlignment="viewStart"
                            android:textColor="@color/white"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:translationY="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageView18"
                            android:layout_width="150dp"
                            android:layout_height="200dp"
                            android:translationX="35dp"
                            app:srcCompat="@drawable/msi27144" />

                        <Button
                            android:id="@+id/btnmsi27"
                            android:layout_width="match_parent"
                            android:layout_height="50sp"
                            android:background="@color/transparente"
                            android:fontFamily="serif-monospace"
                            android:text="MSI OPTIC 27'144HZ"
                            android:textColor="@color/white"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageView19"
                            android:layout_width="150dp"
                            android:layout_height="200dp"
                            app:srcCompat="@drawable/rsxg240" />

                        <Button
                            android:id="@+id/btnrog24"
                            android:layout_width="match_parent"
                            android:layout_height="50sp"
                            android:background="@color/transparente"
                            android:fontFamily="serif-monospace"
                            android:text="ROG STRIX 24'240HZ"
                            android:textAlignment="viewStart"
                            android:textColor="@color/white"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>